@model IEnumerable<ToyForSI.Models.DevModel>

@{
    ViewData["Title"] = "型号列表";
}

<h2>设备型号列表</h2>

<p>
    <a asp-action="Create">添加设备型号</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.devModelName)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.equipmentType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.devModelName)<span class="badge"> @Html.DisplayFor(modelItem => item.devCount)</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brand.brandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.equipmentType.equipmentTypeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.devModelId">编辑</a> |
                <a asp-action="Details" asp-route-id="@item.devModelId">详细</a> |
                <a asp-action="Delete" asp-route-id="@item.devModelId">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
