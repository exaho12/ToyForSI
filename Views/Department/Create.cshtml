@model ToyForSI.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h2>新建</h2>

<h4>科室</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="departmentName" class="control-label"></label>
                <input asp-for="departmentName" class="form-control" />
                <span asp-validation-for="departmentName" class="text-danger"></span>
            </div>
            @{ 
                foreach (var attr in ViewBag.DepartmentValue)
                {
                    
                    @:<div class="form-group">
                        <label class="control-label">@attr.aName</label>
                        <input name="dictionary[@attr.aId]" value="@attr.value" class="form-control" />
                        <span asp-validation-for="departmentName" class="text-danger"></span>
                    @:</div>
                    }
                }
            <div class="form-group">
                <input type="submit" value="新建" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回科室列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
